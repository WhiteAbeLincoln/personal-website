{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "outDir": "./build",
    "rootDir": ".",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@util/*": [
        "./src/util/*"
      ],
      "@comps/*": [
        "./src/components/*"
      ],
      "@src/*": [
        "./src/*"
      ],
      "@styles/*": [
        "./src/styles/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "gatsby-*.js",
    "config/**/*.ts"
  ]
}
